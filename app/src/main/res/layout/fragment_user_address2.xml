<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.UserAddressF">

    <!-- TODO: Update blank fragment layout -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:elevation="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Address"
                        android:textColor="@color/red_400"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/spinner_border"
                        tools:ignore="UselessParent">


                        <EditText
                            android:id="@+id/txtAddress2"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:textColor="#000000"
                            android:backgroundTint="@color/grey_800" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Postal Code"
                        android:textColor="@color/red_400"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/spinner_border"
                        tools:ignore="UselessParent">


                        <EditText
                            android:id="@+id/txtPostalCode2"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:backgroundTint="@color/grey_800"
                            android:editable="false"
                            android:textColor="#000000"
                            android:inputType="number"
                            android:maxLength="5" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Provinces"
                        android:textColor="@color/red_400"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/spinner_border"
                        tools:ignore="UselessParent">


                        <EditText
                            android:id="@+id/spin_provinces2"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:backgroundTint="@color/grey_800"
                            android:editable="false"
                            android:textColor="#000000"
                            android:overlapAnchor="false" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="Regencie"
                        android:textColor="@color/red_400"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/spinner_border"
                        tools:ignore="UselessParent">


                        <EditText
                            android:id="@+id/spin_regencie2"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:backgroundTint="@color/grey_800"
                            android:overlapAnchor="false"
                            android:editable="false"
                            android:textColor="#000000"
                             />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="District"
                        android:textColor="@color/red_400"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/spinner_border"
                        tools:ignore="UselessParent">


                        <EditText
                            android:id="@+id/spin_district2"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:backgroundTint="@color/grey_800"
                            android:overlapAnchor="false"
                            android:editable="false"
                            android:textColor="#000000"
                           />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="Village"
                        android:textColor="@color/red_400"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/spinner_border"
                        tools:ignore="UselessParent">

                        <EditText
                            android:id="@+id/spin_villages2"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:backgroundTint="@color/grey_800"
                            android:overlapAnchor="false"
                            android:editable="false"
                            android:textColor="#000000"
                             />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>


    </com.google.android.material.card.MaterialCardView>


</FrameLayout>